<%- include('layout.ejs'); %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>All Posts</h1>
    <a href="/logout">
      <button type="submit" class="btn btn-primary">Logout</button>
    </a>
  </div>
  <ul class="list-group">
    <% posts.forEach(post => { %>
      <li class="list-group-item">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="mb-1"><%= post.title %></h5>
            <p class="mb-1"><%= post.description %></p>
          </div>
          <div>
            <a href="/<%= post._id %>" class="btn btn-info btn-sm mr-2">View</a>
            <a href="/<%= post._id %>/edit" class="btn btn-warning btn-sm mr-2">Edit</a>
            <form action="/<%= post._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </div>
      </li>
    <% }); %>
  </ul>
  <a href="/new" class="btn btn-success mt-3">New Post</a>
</div>
